source $XDG_CONFIG_HOME/mutt/muttrc
source $XDG_CONFIG_HOME/mutt/pass

# me
set realname = "Karolis Konceviƒçius"
set from = $my_personal_user
set envelope_from = yes

# personal account info
set imap_user = $my_personal_user
set imap_pass = $my_personal_pass
set folder = imap://imap.koncevicius.lt/
set smtp_url = smtp://"$my_personal_user"@koncevicius.lt:25/
set smtp_pass = $imap_pass
set smtp_authenticators = 'gssapi:login'
unset ssl_verify_host

# default mailboxes
set spoolfile = "=INBOX"
set record = "=Sent"
set postponed = "=Drafts"
set trash = "=Trash"
# set save folder
save-hook . '=Archive'

# mailboxes
set imap_check_subscribed

# refresh the mailbox to make sure everything is updated
exec refresh
