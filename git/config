[user]
  name = KarolisKoncevicius
  email = karolis.koncevicius@gmail.com
[color]
  ui = auto
[core]
  editor = nvim
[push]
  default = simple
[alias]
  ls = log --graph --pretty=format:'%C(7)%h%Creset -%C(4)%d%Creset %s %C(7)(%cr) %C(6)<%an>%Creset' --abbrev-commit
  freq = ! git log --all -M -C --name-only --format='format:' "$@" | sort | grep -v '^$' | uniq -c | sort -n
  amend = commit --amend
